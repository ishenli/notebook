btn()
    display: inline-block;
    margin-bottom: 0;
    font-weight: 400;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    background-image: none;
    border: 1px solid transparent;
    white-space: nowrap;
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 4px;
    user-select: none;
    text-decoration none

btn-variable-set($bg, $color, $border)
    background-color $bg
    color  $color
    border-color $border