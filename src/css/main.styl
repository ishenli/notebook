@import './variable.styl';
@import './global.styl';
@import './mixin.styl';
@import './iconfont.styl';

.highlight
    color $-font-highlight

.hidden
    display none !important

.content-body
    margin-right: auto;
    margin-left: auto;

    +below(3)
        width: auto

    +above(4)
        width: 970px
        margin-top 10px

    +above(5)
        width: 1170px
        margin-bottom: 200px;

.intro
    calc-grid-width(10)
    margin 0 auto
    background #fff
    border-radius 3px
    +below(3)
        width 100%
.top-bar
    box-sizing border-box
    calc-grid-width(11)
    padding 15px 15px 0 0
    text-align right
    >.item
        margin-right 20px
        &:last-child
            margin-right 0
    .email
        btn()
        transition: all 0.3s ease-in-out
        btn-variable-set($-btn-default-bg, $-btn-default-color, $-btn-default-border)
    .music
        btn()
        btn-variable-set($-btn-primary-bg, $-btn-primary-color, $-btn-primary-border)
        +above(4)
            display none

.profile-intro
    margin-top: 50px;
    position: relative;
    z-index: 99;
    clearfix()
    +above(4)
        height: 245px

    .profile-aside
        make-md-column(4)
        margin 0 auto

    .profile-main
        make-md-column(6)

    .profile-pic
        position: relative
        box-sizing: border-box
        size(210px, 210px)
        margin 0 auto
        background #fff
        border: 5px solid $primary-color;
        border-radius 50%
        z-index 1
        perspective 1000
        &:hover,
        &.hover
            .front
                transform rotateY(180deg)
            .back
                transform rotateY(0deg)
                z-index 1000
        .flip
            position: relative
            height 200px

        .front,
        .back
            transition: 0.6s
            transform-style: preserve-3d
            backface-visibility hidden
            absolute 0 _ _ 5px
            size(188px, 188px)

        .front
            transform rotateY(0deg)
            z-index 1

        .back
            transform rotateY(-180deg)

        img
            margin-top 6px
            border-radius 50%
            overflow hidden
    .shake
        text-align center
        +above(4)
            display none
.intro-title
    color: $font-color;
    border-bottom: 1px solid $primary-color;

.intro-sub-title
    font-size: 18px;
    color: #777777;
    margin: 10px 0 15px 0

.intro-title,
.intro-sub-title
    text-align: center;
    +above(4)
        text-align left
.intro-desc
    font-size 14px
    text-align left


.timeline-wrap
    clearfix()

.timeline
    make-md-column(11)
    .line
        box-sizing border-box
        padding-left 15px
        padding-right 15px
        li
            list-style none
    .content
        padding-left 57px
        color $font-color
        +below(3)
            padding-left 0
    .section-title
        font-weight: bold;
        font-size: 40px;
        line-height: 40px;
        padding-bottom: 20px;
        margin-bottom 0
    .section-item-title
        margin: 14px 0 10px 0
        padding-bottom: 5px
        font-weight: bold
        border-bottom: 1px solid #ccc;
        font-size: 20px;
    .section-item-desc
        margin-bottom 10px
        font-size 14px
        ul
            padding-left 20px
            li
                list-style disc
    .sub-title
        margin 10px 0
        font-size 14px
        .iconfont
            position relative
            top 2px
            padding-right 5px
            color #777
            
        em
            color #777

.baseinfo
    .line
        make-md-column(6)
    .list
        margin: 0
        padding: 0
        font-size: 18px
        >li
            padding-bottom 10px


// 工作技能
.skills

    .item
        box-sizing border-box
        position relative
        vertical-align top
        +below(3)
            width 100%
        dt
            position: relative
            padding-left 40px
            margin 0
            font-size 18px
            i
                absolute 0 _ _ 0
                size(25px,25px)
                -webkit-print-color-adjust: exact;
                background-size: 100%;
        dd
            margin 10px 0 0 0
            padding-left 40px
            font-size 14px
.qcode
    margin 40px auto 0
    padding-bottom 40px
    text-align center
    +below(4)
        display none

footer
    padding 10px 0
    text-align center
    color #fff
    font-size 16px
    a
        color yellow